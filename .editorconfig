# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Match all CPP source files.
[*.?pp]
# Set default charset
charset = utf-8

# 4 space indentation
indent_style = space
indent_size = 4

# Match conf.py for sphinx.
[conf.py]
# 4 space indentation
indent_style = space
indent_size = 4

# Match all Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Match all YAML files
[*.yml]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
